<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NumberBomb.TutorialPage"
    NavigationPage.HasBackButton="False"
    BackgroundColor="#fdfdfd">
    <NavigationPage.TitleView>
        <Grid >
      <ImageButton HorizontalOptions="StartAndExpand"
                    VerticalOptions="Center"
                    Margin="0,0,12,0"
                    Command = "{Binding BackButtonClicked}"
                    BackgroundColor="White"
                    WidthRequest="16"
                    HeightRequest="30">
        <ImageButton.Source>
          <FontImageSource Color="#343434"
                                     FontFamily="FontAwesome5Solid"
                                     Glyph="&#xf053;"/>
        </ImageButton.Source>
      </ImageButton>
      <Label  x:Name="TitleLabel"
                    FontSize="25"
                    TextColor="Black"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    FontFamily="PatrickFont">
        <Label.FormattedText>
          <FormattedString>
            <Span Text="Number"/>
            <Span Text="BOMB" TextColor="Red"/>
          </FormattedString>
        </Label.FormattedText>
      </Label>

    </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout
                  Margin="0,30,0,0">
            <Grid HorizontalOptions="Center"
                  VerticalOptions="Center">
                  <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                  </Grid.RowDefinitions>

                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>

                  <Image HorizontalOptions="Center"
                         Source="animation.png"
                         WidthRequest="538"
                         HeightRequest="412"
                         Grid.Row="0"
                         Grid.Column="0"/>
                  <Label HorizontalOptions="Center"
                         HorizontalTextAlignment="Center"
                         Text="{Binding Hint}"
                         FontFamily="PatrickFont"
                         FontSize="18"
                         Padding="40,150,40,13"
                         Grid.Row="0"
                         Grid.Column="0"/>
            </Grid>
            <Button Text="OK"
                    BackgroundColor="Black"
                    TextColor="White"
                    FontSize="18"
                    FontFamily="PatrickFont"
                    WidthRequest="240"
                    HeightRequest="42"
                    Margin="59,0,75,0"
                    Command="{Binding OkCommand}"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
